html,
body
  width 100%
  height 100%
  margin 0
  font-family Arial, Helvetica, sans-serif
  font-size 15px
  background: rgb(20,204,128);
  background: radial-gradient(circle, rgba(20,204,128,0.7105217086834734) 30%, rgba(107,0,234,1) 90%);
  scroll-snap-type y mandatory

*
  box-sizing border-box

.app-container
  display flex
  flex-direction column

.sales-button
  width 90%
  max-width 350px
  padding 10px 20px
  border-radius 15px
  color white
  font-size 15px
  font-weight bold
  text-align center
  text-decoration none
  word-break keep-all
  background-color #6b00ea
  cursor pointer

.sales-button:hover
  opacity .7