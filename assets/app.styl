html,
body
  width 100%
  height 100%
  margin 0
  font-family Arial, Helvetica, sans-serif
  font-size 15px
  background-color #F0F2F5
  scroll-snap-type y mandatory

*
  box-sizing border-box

.app-container
  display flex
  flex-direction column

.sales-button
  width 90%
  max-width 350px
  padding 10px 20px
  border-radius 15px
  color white
  text-align: center
  text-decoration none
  background-color #6b00ea
  cursor pointer

.sales-button:hover
  opacity .7